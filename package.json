{
  "name": "babel-poe",
  "author": {
    "name": "Robert Wolff"
  },
  "version": "0.1.9",
  "private": true,
  "scripts": {
    "dev": "nf start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "mac:build": "npm run build && node_modules/.bin/build --mac",
    "win:build": "npm run build && node_modules/.bin/build --win",
    "format": "prettier --write '{src,server,webpack,mailserver}/**/*.{js,json}'",
    "lint": "eslint '{src,server,webpack,mailserver}/**/*.js' --fix"
  },
  "pre-commit": [
    "format",
    "lint"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react",
      "prettier"
    ],
    "rules": {
      "react/prop-types": 0,
      "no-undef": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "description": "Auto translator for PoE chat messages as Electron app",
  "homepage": "./",
  "main": "public/electron.js",
  "build": {
    "productName": "Babel PoE",
    "appId": "net.rawbird.babelpoe",
    "electronVersion": "3.0.6",
    "dmg": {
      "icon": "assets/mac/icon.hqx",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "assets/win/icon.ico",
      "publish": "github"
    },
    "files": [
      "build/**/*",
      "electron/*"
    ]
  },
  "dependencies": {
    "electron-json-storage": "^4.1.4",
    "electron-updater": "^3.1.6",
    "google-translate": "^2.2.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-scripts": "2.0.5",
    "universal-analytics": "^0.4.20",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "foreman": "^3.0.1",
    "electron": "^13.6.6",
    "electron-builder": "^20.28.4",
    "babel-eslint": "^9.0.0",
    "eslint": "5.6.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "font-blast": "^0.6.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.12.1",
    "jest": "23.6.0",
    "node-fetch": "^2.1.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rowolff/babel-poe.git"
  }
}
